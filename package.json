{
  "name": "eudic-translate",
  "displayName": "Eudic Translate",
  "description": "Eudic Translate Integrated in VS Code.",
  "version": "0.1.3",
  "publisher": "khakiakhaki",
  "engines": {
    "vscode": "^1.60.0"
  },
  "icon": "images/icon.webp",

  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:eudic-translate.translate"
  ],
  "main": "./extension.js",
  "extensionKind": [
    "ui"
  ],
  "contributes": {
    "commands": [
      {
        "command": "eudic-translate.translate",
        "title": "Send to Eudic"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "eudic-translate.translate",
          "when": "editorFocus",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Eudic",
      "properties": {
        "eudic.exePath": {
          "type": "string",
          "default": "",
          "description": "The full path to the Eudic executable (e.g., /Applications/Eudic.app/Contents/MacOS/Eudic or C:\\Program Files\\Eudic\\eudic.exe). This path is specific to your local machine.",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "echo 'No compile step'",
    "watch": "echo 'No watch step'",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "vscode": "^1.1.37",
    "eslint": "^8.0.0"
  }
}